{% extends 'base.html.twig' %}

{% block title %}{{ book.title }} - Médiathèque La Chapelle-Curreaux{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/showBook.css') }}" rel="stylesheet" />
{% endblock %}


{% block body %}
    {% include('headers/header-employee.html.twig') %}
    <main>
        <div class="container z-depth-2">
            {% include('books/_btn-dispo-book.html.twig') %}
            <div class="title-container row center">
                <h1>{{ book.title }}</h1>
            </div>
            <div class="row">
                <div class="book-img-container left">
                    {% if book.cover %}
                        <img class="responsive-img" src="{{ asset(book.cover) }}" />
                    {% else %}
                        <img class="responsive-img" src="{{ asset('assets/images/image-default.jpg') }}" />
                    {% endif %}
                </div>
                <div class="book-text-container">

                    <p class="">
                        <u>Synopsis:</u>
                        {{ book.description }}
                    </p>
                    <p class="">
                        <u>Date de parution:</u>
                        {{ book.parutedAt|date('d/m/Y') }}
                    </p>
                    <p class="">
                        <u>Auteur(s):</u>
                        {% for author in book.authors %}
                            {{ author.name }}
                        {% endfor %}
                    </p>
                    <p class="">
                        <u>Genre:</u>
                        {% for category in book.categories %}
                            {{ category.name }}
                        {% endfor %}
                    </p>
                </div>
            </div>
            <div class="btn-container">
                {% if (is_granted("ROLE_EMPLOYEE")) %}
                {{ include('books/_delete_form.html.twig') }}
                {% endif %}
                <a class="btn waves-effect waves-light {{ book.isFree ? '' : 'disabled'}} " href="{{ path('books_reservations_new', {'id': book.id }) }}">
                    <i class="material-icons right">add</i>
                    Emprunter</a>
            </div>
        </div>
    </main>
    {% include('./_footer.html.twig') %}

{% endblock %}
