{% extends 'base.html.twig' %}

{% block title %} Emprunt utilisateurs {% endblock %}

{% block body %}
    {% if (is_granted("ROLE_EMPLOYEE")) %}
        {% include('headers/header-employee.html.twig') %}
    {% else %}
        {% include('headers/header-user.html.twig') %}
    {% endif %}
    {% include('./_app-flashes.html.twig') %}

    <main>
        <div class="container">
            <div class="row">
                <h1>Liste des emprunts</h1>
            </div>
            <div class="row">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Statut</th>
                        <td>A rappeler</td>
                    </tr>
                    <tr>
                        <th>ReservedAt</th>
                        <td>{{ books_reservation.reservedAt ? books_reservation.reservedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>IsCollected</th>
                        <td>{{ books_reservation.isCollected ? 'Yes' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </main>


    <a href="{{ path('books_reservations_index') }}">back to list</a>



    {{ include('books_reservations/_delete_form.html.twig') }}
{% endblock %}